<div class="custom-bg">
  <div class="container py-5">
    <div class="row">
      <div class="col-md-12">
        <!-- <h2 class="text-center mb-4">Bootstrap 4 Login Form</h2> -->
        <div class="row">
          <div class="col-md-6 mx-auto">
            <%- model_class = Image -%>
            <div class="text-center">
              <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
            </div>

            <div class="text-center">
              <strong><%= model_class.human_attribute_name(:name) %>:</strong>
              <%= @image.name %>
              <div class="container">
                <%= image_tag(@image.picture.url) if @image.picture %>
              </div>
            </div>

            <div class="mt-3 text-center">
              <%= link_to t('.back', :default => t("helpers.links.back")),
                            images_path, :class => 'btn btn-outline'  %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_image_path(@image), :class => 'btn btn-warning' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            image_path(@image),
                            :method => 'delete',
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-danger' %>
            </div>
          </div>
        </div> <!--/row-->
      </div> <!--/col-->
    </div> <!--/row-->
  </div> <!--/container-->
</div>