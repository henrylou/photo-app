<div class="custom-bg">
  <%- model_class = Image -%>
  <div class="container">

    <!-- Page Heading -->
    <h1 class="my-4">
      <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
      <small><%= current_user.email %></small>
    </h1>

    <div class="row">
      <% @images.each do |image| %>    
        <div class="col-lg-6 mb-4">
          <div class="card h-100">
            <!-- <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a> -->
            <%= image_tag image.picture.url %>
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to image.name, image_path(image) %> 
              </h4>
              <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.</p>
              <%= link_to t('.show', :default => t("helpers.links.show")), image_path(image), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_image_path(image), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")), image_path(image), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger' %>
            </div>
          </div>
        </div>
      <% end %>
        <div class="col-lg-6 mb-4">
          <div class="card h-100">
            <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>

            <div class="card-body">
              <h4 class="card-title">
                Hello              
              </h4>
              <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.</p>
            </div>
          </div>
        </div>

      <%= link_to t('.new', :default => t("helpers.links.new")), new_image_path, :class => 'btn btn-primary' %>
    </div>
    <!-- /.row -->
  </div>
</div>