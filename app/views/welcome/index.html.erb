<header class="masthead">
  <div class="container h-100">
    <div class="row h-100">
      <div class="my-auto col">
        <div class="header-content mx-auto">
          <h1 class="mb-5 text-center">Instagram</h1>
          <!-- <a href="#download" class="btn btn-outline btn-xl">Start Now for Free!</a> -->
          <div class="text-center">
            <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-outline btn-lg' %>
            <%= link_to 'Log In', new_user_session_path, class: 'btn btn-outline btn-lg' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<section class="download bg-primary text-center" id="download">
  <div class="container">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <h2 class="section-heading">About</h2>
        <p>Instagtam clone is a web app for you to manage your photos.</p> 
        <p>Try our app right now!</p>
      </div>
    </div>
  </div>
</section>

<section class="features" id="features">
  <div class="container">
    <div class="section-heading text-center">
      <h2>Features</h2>
      <p class="text-muted">Check out what you can do with out app!</p>
      <hr>
    </div>
    <div class="row">
      <div class="col-lg-12 my-auto">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-6">
              <div class="feature-item">
                <i class="icon-login text-primary"></i>
                <h3>Authentication System</h3>
                <p class="text-muted">Ready to sign up and log in to try our photo app!</p>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="feature-item">
                <i class="icon-credit-card text-primary"></i>
                <h3>Credit Card Binding</h3>
                <p class="text-muted">Stripe will handle your credit card information. We won't charge anything!</p>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6">
              <div class="feature-item">
               <i class="icon-envelope text-primary"></i>
                <h3>Email Confirmation</h3>
                <p class="text-muted">After signing up, you will receive an email from SendGrid to confirm your account.</p>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="feature-item">
                <i class="icon-folder text-primary"></i>
                <h3>Image Hosting</h3>
                <p class="text-muted">All of your images are stored on Amazon S3.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

