<% if current_user %>
   <div class="jumbotron">
    <h2 align="center">Welcome <%= current_user.email %></h2>
    <p align="center">
      Start managing your Photos with our application!
    </p>
  </div>

<% else %>
  <div class="jumbotron">
    <h2 align="Center">Welcome to ePhoto</h2>
    <p align="Center">
      You'll love managing your Photos with ePhoto
    </p>
  </div>

  <div class="row">
    <div class="plans clearfix">
      <!-- <div class="col-lg-3 col-lg-offset-3 plan"> -->
      <div align="center">  
        <p>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
          <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary sign-up' %>
        </p>
      </div>
    </div>
  </div>
<% end %>